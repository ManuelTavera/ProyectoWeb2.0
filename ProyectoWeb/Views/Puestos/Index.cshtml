@model IEnumerable<ProyectoWeb.Puestos>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form method="get">
    <input type="text" id="Criterio" name="Criterio" />
    <input type="submit" id="cmdBuscar" value="Buscar" />
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombrePuesto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NivelRiesgo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NivelMinimoSalario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NivelMáximoSalario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombrePuesto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NivelRiesgo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NivelMinimoSalario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NivelMáximoSalario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdPuesto }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdPuesto }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdPuesto })
        </td>
    </tr>
}

</table>
